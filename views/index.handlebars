<div class="row">
  <div class="col s12 m12">
     <div class="message animated fadeIn">
         {{messages}}
      </div>
    <div class="card" style="margin: 4rem 0 1rem 0;">
      <button class="btn waves-effect waves-light right" style="margin: 2% 3% 0 0;"><a href="/reg_numbers" style="color: #fff;">Registration numbers</a>
        <i class="material-icons right">send</i>
      </button>
      <div class="" style="padding: 1em 0 1.8em 0;">
        <h3 class="center" style="margin: 10% 0 0 0;">Registration Numbers Web App</h3>
      </div>
      <div class="card-content">
        <div class="row">
          <div class="col s12 m12" style="">
            <form action="/reg_number" method="POST">
              <div class="input-field" style="display: flex; align-items: center;">
                <span for="name" style="font-size: 16px;">Registration Number</span>
                <input placeholder="Enter registration" id="name" type="text" class="validate right" name="registration"
                  style="border: solid 1px #4EC8BA;" maxlength = "12">
              </div>
              <div class="right">
                <button class="btn waves-effect waves-light" type="submit">Add</a></button>
              </div>
            </form>
            <form action="/reg_numbers" method="POST">
              <div style="display:flex; margin: 10% 0 5% 0; justify-content: space-evenly;font-size: 16px;">
                <label>
                  <input class="with-gap" name="townRadio" value="All" type="radio" />
                  <span style="font-size: 16px;">All</span>
                </label>
                {{#each towns}}
                  <label>
                    <input class="with-gap" name="townRadio" value="{{town_name}}" type="radio" />
                    <span style="font-size: 16px;">{{town_name}}</span>
                  </label>
                {{/each}}
              </div>
              <div class="right">
                <button class="btn waves-effect waves-light" type="submit">Show</a></button>
              </div>
            </form>
            <div class="regNumList center">
              {{#each regNumbersFromTown}}
                <a href="/reg_number/{{reg_number}}">{{reg_number}}</a>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>